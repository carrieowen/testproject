<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carrieowen.testproject.tornado">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IN CASE OF TORNADO"
        android:id="@+id/textView6"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="7dp"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Listen to and act on the instructions of a teacher or administrator."
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/textView2"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If there isn't a staff member in your location: \n• follow any class that is acting on the current drill \n• evacuate any room with windows\n• assume the position in a place without heavy items that may fall on you\n• put as many walls between you and the outside\n• stay until he storm ends "
        android:id="@+id/textView3"
        android:paddingLeft="2dp"
        android:paddingBottom="15dp"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If you see a tornado or the threat of a tonado that hasn't been addressed:\n• tell a nearby teacher or administrator"
        android:id="@+id/textView4"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:text="return"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal" />



</LinearLayout>

   


