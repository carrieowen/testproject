<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="IN CASE OF A FIRE"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingBottom="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Listen to and act on the instructions of a teacher or administrator."
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/textView2"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If there isn't a staff member in your area:"
        android:id="@+id/textView3"
        android:gravity="center_horizontal"
        android:textStyle="italic|bold"
        android:paddingBottom="10dp"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="• follow any class that is acting on the current drill \n• locate the nearest exit and evacuate "
        android:id="@+id/textView7"
        android:paddingBottom="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If you see a fire or the threat of a fire that hasn't been addressed:"
        android:id="@+id/textView4"
        android:gravity="center_horizontal"
        android:textStyle="bold|italic"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="• pull the fire alarm\n• locate any possible exits and determine if they are safe to approach; if they are, evacuate \n• search for a fire extinguisher or safety blanket \n• stay as far away as possible from the flames \n• call for help"
        android:id="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.25" />

    <Button
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:text="return"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="Main"/>


</LinearLayout>
</ScrollView>